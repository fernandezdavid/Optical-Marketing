@model IEnumerable<OMKT.Business.User>
@{
    ViewBag.Title = "Administración de Usuarios";
    Layout = "~/Views/Shared/_Dashboard_Layout.cshtml";
}
<h2>
    Administración de Usuarios</h2>
<p>
    <a href="@Url.Action("Create", "User")" class="btn btn-primary"><i class="icon-plus icon-white ">
    </i>Nuevo Usuario</a>
</p>
<table id="example" class="table table-striped table-bordered">
    <tr>
        <th>
            Usuario
        </th>
        <th>
            Email
        </th>
        <th>
            Nombre
        </th>
        <th>
            Apellido
        </th>
        <th>
            Aprobado
        </th>
        <th>
            Intentos Login
        </th>
        <th>
            Fecha Nacimiento
        </th>
        <th>
            Última visita
        </th>
        <th>
            Fecha de Creación
        </th>
        <th>
            Cliente
        </th>
        <th>
            Bloqueado
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordFailuresSinceLastSuccess)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastLoginDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLockedOut)
            </td>
            <td>
                <div class="btn-group">
                    <a href="@Url.Action("Edit", new { id = item.UserId })" class="btn btn-primary small" >
                        <i class=" icon-edit icon-white"></i></a><a href="@Url.Action("Details", new { id = item.UserId })" class="btn small" >
                            <i class="icon-align-justify"></i></a><a href="@Url.Action("Delete", new { id = item.UserId })" class="btn small delete-catalog">
                                <i class=" icon-trash "></i></a>
                </div>
            </td>
        </tr>
    }
</table>
<script type="text/javascript">
    $(document).ready(function () {
        $('#example').dataTable({
            "sDom": "<'row-fluid'<'span6'T><'span6'f>r>t<'row-fluid'<'span6'i><'span6'p>>",
            "aoColumnDefs": [
                { "bSortable": false, "aTargets": [0, 12] }
            ]
            //"sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>"
        });
    });
   
</script>
