                @Html.TextBoxFor(model => model.LastName, new { @class = "span4" }) @Html.ValidationMessageFor(model => model.LastName)
            </div>
        </div>
    </div>
    <div class="clearfix">
        <div class="span6">
            @Html.LabelFor(model => model.IsApproved)
            <div class="input">
                @Html.EditorFor(model => model.IsApproved, new { @class = "span4" }) @Html.ValidationMessageFor(model => model.IsApproved)
            </div>
