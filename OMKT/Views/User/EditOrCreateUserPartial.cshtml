@model OMKT.Business.User
<fieldset>
    @if (Model != null)
        {   <text> @Html.HiddenFor(model => model.UserId) </text>
        }
    <div class="clearfix">
        <div class="span6">
            @Html.LabelFor(model => model.Username)
            <div class="input">
                @Html.TextBoxFor(model => model.Username, new { @class="span4" }) @Html.ValidationMessageFor(model => model.Username)
            </div>
        </div>
        @*<div class="span6">
            @Html.LabelFor(model => model.Password)
        
