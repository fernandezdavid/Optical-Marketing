                @Html.TextBoxFor(model => model.Password, new { @class = "span4" })
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>*@
    </div>
    <div class="clearfix">
        <div class="span6">
            @Html.LabelFor(model => model.Email)
            <div class="input">
                @Html.TextBoxFor(model => model.Email, new { @class="span4" }) @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>
    </div>
    <div class="clearfix">
        <div class="span6">
            @Html.LabelFor(model => model.FirstName)
            <div class="input">
                @Html.TextBoxFor(model => model.FirstName, new { @class = "span4" }) @Html.ValidationMessageFor(model => model.FirstName)
            </div>
        </div>
    </div>
    <div class="clearfix">
        <div class="span6">
            @Html.LabelFor(model => model.LastName)
