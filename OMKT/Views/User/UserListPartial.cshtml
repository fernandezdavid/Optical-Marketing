@using Paging

@model IPagedList<OMKT.Business.User>
           
<div class="pagingContainer">
        @Html.Pager(Model.PageSize, Model.PageNumber, Model.TotalItemCount)
</div>

<table class="zebra-striped">
    <thead>
        <th>
            ID
        </th>
        <th>
            Nombre de usuario
        </th>
        <th>
            Nombre
        </th>
       
        <th>
            Apellido
        </th>
        <th>
            Email
        </th>
        
        <th>
            Aprobado
        </th>
        <th>
            Bloqueado
        </th>
        <th>
            Fecha de creación
        </th>
        <th>
            Última visita 
        </th>
        
        <th></th>
    </thead>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
      
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsApproved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLockedOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastLoginDate)
            </td>
            
            <td nowrap>
                  <div class="btn-group">
                <a href="@Url.Action("Edit", new { id = item.UserId })" class="btn primary small editUser" idUser="@item.UserId "><i class=" icon-edit icon-white"></i></a>
                <a href="@Url.Action("Details", new { id = item.UserId })" class="btn small"><i class=" icon-align-justify "></i></a>
                <a href="@Url.Action("Delete", new { id = item.UserId })" class="btn small"><i class=" icon-trash "></i></a>
                </div>
            </td>
        </tr>
    }

    </table>