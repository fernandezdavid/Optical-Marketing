
@using OMKT.Business
@model Catalog

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Dashboard_Layout.cshtml";
}



<h2>Crear</h2>
<div class="alert-message warning" style="margin-top: 15px">
    <p><strong>Estás creando un nuevo Catálogo.</strong> </p>
    <p>A continuación debes incorporar los productos que formarán parte del mismo.</p>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create", "Catalog", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <text>
        @{Html.RenderPartial("EditOrCreateCatalogPartial", Model);}
    </text>
}

