@model OMKT.Business.Catalog
@{
    ViewBag.Title = "Detalle";
    Layout = "~/Views/Shared/_Dashboard_Layout.cshtml";
}
<div class="span12">
    <h2>
        Detalle <small>del Catálogo</small></h2>
    <div class="row-fluid">
        <div class="span6">
            <div class="page-header">
                <h3>@Html.DisplayFor(model => model.Name)</h3>
            </div>
            <div class="details-view">
                <p>
                    <strong>Nombre</strong>
                    </p><p>
                    @Html.DisplayFor(model => model.Name)
                </p>
                <p>
                    <strong>Fecha de vigencia</strong>
                    </p><p>
                    @Html.DisplayFor(model => model.StartDatetime)
                </p>
                <p>
                    <strong>Fecha de caducidad</strong>
                    </p><p>
                    @Html.DisplayFor(model => model.EndDatetime)
                </p>
                <p>
                    <strong>Última modificación</strong>
                    </p><p>
                    @Html.DisplayFor(model => model.LastUpdate)
                </p>
            </div>
        </div>
        <div class="span6">
            <div id="catalogDetailsList">
                @{Html.RenderAction("IndexByCatalogCarousel", "CatalogDetails", new { id = Model.AdvertId });}
            </div>
        </div>
        <div class="clear"></div>
        <div class="actions">
            @Html.ActionLink("Volver", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
</div>
