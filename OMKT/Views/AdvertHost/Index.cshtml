@model IEnumerable<OMKT.Business.AdvertHost>

@{
    ViewBag.Title = "Administración de Puestos";
    Layout = "~/Views/Shared/_Dashboard_Layout.cshtml";
}

<h2>Administración de Puestos</h2>

<p>
    <a href="@Url.Action("Create", "AdvertHost")" class="btn btn-primary"><i class="icon-plus icon-white ">
        </i> Nuevo Puesto</a>
</p>
 
<table id="example" class="table table-striped table-bordered">
    <thead>
        <th>
            Nombre
        </th>
        <th>
            Categoría
        </th>
        <th>
            Fecha de Caducidad
        </th>
        <th>
            Última caída
        </th>
        <th>
            Tiempo en ejecución
        </th>
        <th>
            Locación
        </th>
        <th></th>
    </thead>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AdvertHostName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdvertHostCategory.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastDownTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UpTime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location.Latitude)
        </td>
        <td>
            <div class="btn-group">
                    <a href="@Url.Action("Edit", new { id = item.AdvertHostId })" class="btn btn-primary small" >
                        <i class=" icon-edit icon-white"></i></a><a href="@Url.Action("Details", new { id = item.AdvertHostId })" class="btn small" >
                            <i class="icon-align-justify"></i></a><a href="@Url.Action("Delete", new { id = item.AdvertHostId })" class="btn small delete-catalog">
                                <i class=" icon-trash "></i></a>
                </div>
        </td>
    </tr>
}

</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('#example').dataTable({
            "sDom": "<'row-fluid'<'span6'T><'span6'f>r>t<'row-fluid'<'span6'i><'span6'p>>",
            "aoColumnDefs": [
                { "bSortable": false, "aTargets": [0, 12] }
            ]
            //"sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>"
        });
    });
   
</script>