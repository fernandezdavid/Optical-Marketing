@model IEnumerable<OMKT.Business.AdvertDetail>
<table id="example" class="table table-striped table-bordered dataTable">
    <thead>
        <th>
            
        </th>
        <th>
            Producto
        </th>
        <th>
            Valoración
        </th>
        <th>
            Vistas
        </th>
        <th>
            Orden 
        </th>
        <th>
            Fecha de agregación
        </th>
        <th>
            
        </th>
    </thead>
@foreach (var item in Model) {
    var catalogDetail = "catalogDetail" + item.AdvertDetailId; 
    <tr id="@catalogDetail">
        <td>
            <img src="@Url.Content(item.CommercialProduct.ProductImage.ThumbnailPath)" class="img-rounded" title="@item.CommercialProduct.ProductImage.Title" alt="@item.CommercialProduct.ProductImage.Caption" width="50px" height="50px"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommercialProduct.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Likes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Views)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td nowrap>
            <div class="btn-group">
                <a href="@Url.Action("Edit", new { id = item.AdvertDetailId })" class="btn btn-primary small editAdvertDetails" idCatalogDetails="@item.AdvertDetailId"><i class=" icon-edit icon-white"></i></a>
        @*        <a href="@Url.Action("Details", new { id = item.AdvertDetailId })" class="btn small"><i class=" icon-align-justify "></i></a>*@
                <a href="@Url.Action("Delete", new { id = item.AdvertDetailId })" idCatalogDetails = "@item.AdvertDetailId" class="btn small deleteAdvertDetails"><i class=" icon-trash "></i></a>
            </div>
        </td>
    </tr>
}
    
</table>
