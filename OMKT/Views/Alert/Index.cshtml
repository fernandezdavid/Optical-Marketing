@model IEnumerable<OMKT.Business.Alert>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Dashboard_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            Message
        </th>
        <th>
            Date
        </th>
        <th>
            Customer
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Message)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AlertId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AlertId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AlertId })
        </td>
    </tr>
}

</table>
