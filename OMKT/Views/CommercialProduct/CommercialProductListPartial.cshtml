@model IEnumerable<OMKT.Business.CommercialProduct>
<script type="text/javascript">
    $(document).ready(function () {
        $('#products-table').dataTable({
            "sDom": "<'row-fluid'<'span6'T><'span6'f>r>t<'row-fluid'<'span6'i><'span6'p>>",
            "aoColumnDefs": [
                { "bSortable": false, "aTargets": [ 0, 6 ] },
                { "sWidth": "40%", "aTargets": [ 2 ] },
            ] 
            //"sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>"
        });
    });
   
</script>
<table id="products-table" class="table table-striped table-bordered dataTable table-hover">
    <thead>
        <th class="noSorting">
        </th>
        <th>
            Nombre
        </th>
        <th>
            Descripción
        </th>
        <th>
            Cantidad
        </th>
        <th>
            Categoría
        </th>
        <th>
            Precio
        </th>
        <th  class="noSorting">
        </th>
    </thead>
    @foreach (var item in Model)
    {

        <tr>
            <td>
                <img src="@Url.Content(item.ProductImage.ThumbnailPath)" class="" title="@item.ProductImage.Title" alt="@item.ProductImage.Caption" />
            </td>
            <td>
                <a href="@Url.Action("Edit", "CommercialProduct", new { id = item.CommercialProductId})">@item.ProductName</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommercialProductType.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <div class="btn-group">
                    <a href="@Url.Action("Edit", new { id = item.CommercialProductId })" class="btn btn-primary small editCommercialProduct" idÇommercialProduct="@item.CommercialProductId ">
                        <i class=" icon-edit icon-white"></i></a>
                    <a href="@Url.Action("Details", new { id = item.CommercialProductId })" class="btn small">
                            <i class=" icon-align-justify "></i></a>
                    <a href="@Url.Action("Delete", new { id = item.CommercialProductId })" class="btn small delete-product" product-id="@item.CommercialProductId">
                                <i class=" icon-trash "></i></a>
                </div>
            </td>
        </tr>
    }
</table>





