@model IEnumerable<OMKT.Business.CommercialProduct>
           
<table class="table table-striped table-bordered dataTable">
    <thead>
        <th></th>
        <th>
            Nombre
        </th>
        <th>
            Descripción
        </th>
        <th>
            Cantidad
        </th>
        
        <th>
            Precio
        </th>
       
    </thead>
    @if(Model!=null){
        foreach (var item in Model)
    {

        <tr>
            <td><img src="http://hp.static.adidas.com/@Url.Content(item.ProductImage.ThumbnailPath)" class="img-rounded" title="@item.ProductImage.Title" alt="@item.ProductImage.Caption" width="30" height="30"/></td>
            <td>
                
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td >
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            
        </tr>
    }
    }else
    {
        <tr><td colspan="5">No hay productos disponibles.</td></tr>
    }
</table>
