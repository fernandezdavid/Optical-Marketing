@model IEnumerable<OMKT.Business.AdvertCampaign>
<table class="table table-striped table-bordered dataTable">
    <thead>
       <th>
            Campaña
        </th>
        <th>
            Tipo
        </th>
        <th>
             Estado
        </th>
        <th>
            Ubicación
        </th>
        <th>
            Red
        </th>
        <th>
            Presupuesto
        </th>
        <th>
            Fecha de inicio
        </th>
        <th>
            Fecha de finalización
        </th>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Edit", "AdvertCampaign", new { id = item.AdvertCampaignId })">@item.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CampaignType.Name)
            </td>
            <td>
                <span class="label label-@((item.CampaignStateId == 1) ? "success" : "important")">@Html.DisplayFor(modelItem => item.CampaignState.Description)</span>
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.CampaignLocation.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Network.Description)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Estimate) al día
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDatetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDatetime)
            </td>
        </tr>
    }
</table>
