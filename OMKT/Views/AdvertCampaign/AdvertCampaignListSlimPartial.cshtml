@model IEnumerable<OMKT.Business.AdvertCampaign>
<table class="table table-striped table-bordered dataTable">
    <thead>
        <th>
            Campaña
        </th>
        <th>
            Tipo
        </th>
        <th>
            Nro. Anuncios
        </th>
        <th>
            Fecha de inicio
        </th>
        <th>
            Fecha de caducidad
        </th>
        <th>
            Presupuesto
        </th>
        <th>
            Impresiones
        </th>
        <th>
            Costo
        </th>
        <th>
            Estado
        </th>
        <th>
            Fecha de modificación
        </th>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@Url.Action("Edit", "AdvertCampaign", new { id = item.AdvertCampaignId })">@item.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CampaignType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdvertCampaignDetails.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDatetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDatetime)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Estimate) al día
            </td>
            <td>
            </td>
            <td>
            </td>
            <td>
                <span class="label">@Html.DisplayFor(modelItem => item.CampaignState.Description)
                </span>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastUpdate)
            </td>
        </tr>
    }
</table>
