@model IEnumerable<OMKT.Business.AdvertCampaign>
<script type="text/javascript">
    $(document).ready(function () {
        $('#example').dataTable({
            "sDom": "<'row-fluid'<'span6'T><'span6'f>r>t<'row-fluid'<'span6'i><'span6'p>>",
            "aoColumnDefs": [
                { "bSortable": false, "aTargets": [0, 9] }                
            ] 
            //"sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>"
        });
    });
   
</script>
<table id="example" class="table table-striped table-bordered">
    <thead>
        <th>
        </th>
        <th>
            Campaña
        </th>
        <th>
            Tipo
        </th>
        <th>
             Estado
        </th>
        <th>
            Ubicación
        </th>
        <th>
            Red
        </th>
        <th>
            Fecha de inicio
        </th>
        <th>
            Fecha de finalización
        </th>
        <th>
           Nro. Anuncios
        </th>
        <th>
        </th>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                <input type="checkbox" name="@Html.DisplayFor(modelItem => item.AdvertCampaignId)" />
            </td>
            <td>
                <a href="@Url.Action("Edit", "AdvertCampaign", new { id = item.AdvertCampaignId })">@item.Name</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CampaignType.Name)
            </td>
            <td>
                <span class="label label-@((item.CampaignStateId == 1) ? "success" : "important")">@Html.DisplayFor(modelItem => item.CampaignState.Description)</span>
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.CampaignLocation.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Network.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDatetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDatetime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdvertCampaignDetails.Count)
            </td>
            
            <td class="noprint">
                <div class="btn-group">
                    <a href="@Url.Action("Edit", new { id = item.AdvertCampaignId })" class="btn btn-primary small" >
                        <i class=" icon-edit icon-white"></i></a>@* <a href="@Url.Action("Details", new { id = item.AdvertCampaignId })" class="btn small"><i class=" icon-print "></i></a>*@
                    <a href="@Url.Action("Delete", new { id = item.AdvertCampaignId })" class="btn small delete-campaign" campaign-id="@item.AdvertCampaignId">
                        <i class=" icon-trash "></i></a>
                </div>
            </td>
        </tr>
    }
    @*      <tr><td colspan="6">No hay camapañas disponibles.</td></tr>*@
</table>
