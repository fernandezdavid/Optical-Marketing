@model OMKT.Models.ChangePasswordModel
@{
    ViewBag.Title = "Actualizar contraseña";
    Layout = "~/Views/Shared/_Dashboard_Layout.cshtml";
}
<div class="span12">
    <h2>
        Actualizar contraseña</h2>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class="form-horizontal" }))
    {
        @Html.ValidationSummary(true)
        <fieldset>
            <div class="control-group">
                <label class="control-label">
                    Contraseña Actual</label>
                <div class="controls">
                    @Html.PasswordFor(model => model.OldPassword, new { @class = "", @autofocus=true })
                    @Html.ValidationMessageFor(model => model.OldPassword)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    Nueva Contraseña</label>
                <div class="controls">
                    @Html.PasswordFor(model => model.NewPassword, new { @class = "" })
                    @Html.ValidationMessageFor(model => model.NewPassword)
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">
                    Confirmar Contraseña</label>
                <div class="controls">
                    @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "" })
                    @Html.ValidationMessageFor(model => model.ConfirmPassword)
                </div>
            </div>
            <div class="form-actions">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a href="@Url.Action("Index", "Dashboard")" class="btn">Volver</a>
            </div>
        </fieldset>
    
    }
</div>
