@model OMKT.Models.LogOnModel   
@{
    ViewBag.Title = "Iniciar sesión";
}
<div class="page rounded wbox">
    <div class="page-content">
        <div class="row-fluid">
            <div class="page-header">
                <h2>
                    Inicia sesión</h2>
            </div>
            <div class="clearfix">
            </div>
            <div class="span6">
                @Html.ValidationSummary(false)
                @using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                
                    <fieldset>
                        @*<legend>Información de cuenta</legend>*@
                        <div class="control-group">
                            <label class="control-label">
                                Usuario</label>
                            <div class="controls">
                                @Html.TextBoxFor(m => m.User, new { autofocus = "true", @class = "" })
                                @Html.ValidationMessageFor(m => m.User)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label">
                                Contraseña</label>
                            <div class="controls">
                                @Html.PasswordFor(m => m.Password, new { @class = "" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                <label class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox" })
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <div class="form-actions">
                            <input type="submit" value="Ingresar" class="btn btn-danger" />
                        </div>
                    </fieldset>
                
                }
            </div>
            <div class="span5">
                <p>
                    A continuación, ingresa tu nombre de usuario y contraseña, o @Html.ActionLink("Contáctanos", "Contacto", "Home")
                    si aún no tienes una cuenta.
                </p>
            </div>
        </div>
    </div>
</div>
