@model OMKT.Models.LogOnModel
@{
    ViewBag.Title = "Iniciar sesión";
}
<div class="page rounded wbox">
    <div class="page-content">
        <div class="row-fluid">
            <div class="page-header">
                <h2>
                    Inicia sesión</h2>
            </div>
            <div class="clearfix"></div>
            <div class="span6">
               @Html.ValidationSummary(false)
                @using (Html.BeginForm())
                {
                
                    <fieldset>
                        @*<legend>Información de cuenta</legend>*@
                        @Html.LabelFor(m => m.User)
                        @Html.TextBoxFor(m => m.User, new { autofocus = "true", @class = "input-xlarge" })
                        @Html.ValidationMessageFor(m => m.User)
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password , new{ @class="input-xlarge"})
                        @Html.ValidationMessageFor(m => m.Password)
                        <label class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "checkbox" })
                            Remember Me
                        </label>
                        <p>
                            <input type="submit" value="Ingresar" class="btn btn-danger" />
                        </p>
                    </fieldset>
                
                }
            </div>
            <div class="span5">
                <p>
                    A continuación, ingresa tu nombre de usuario y contraseña, o @Html.ActionLink("Contáctanos", "Contacto", "Home")
                    si aún no tienes una cuenta.
                </p>
            </div>
        </div>
    </div>
</div>
