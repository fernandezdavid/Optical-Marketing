@model OMKT.Business.Monitoring

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Dashboard_Layout.cshtml";
}

<h2>Edit</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Monitoring</legend>

        @Html.HiddenFor(model => model.MonitoringID)

        <div class="editor-label">
            @Html.LabelFor(model => model.AdvertHostID, "AdvertHost")
        </div>
        <div class="editor-field">
            @Html.DropDownList("AdvertHostID", String.Empty)
            @Html.ValidationMessageFor(model => model.AdvertHostID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Timestamp)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Timestamp)
            @Html.ValidationMessageFor(model => model.Timestamp)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Average)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Average)
            @Html.ValidationMessageFor(model => model.Average)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
