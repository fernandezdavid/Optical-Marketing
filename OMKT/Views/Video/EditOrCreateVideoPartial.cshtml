        <text>
        <div class="control-group">
            <div class="controls">
                <div class="span4" style="margin-left:0">
                    <img src="@Url.Content(Model.ProductImage.ThumbnailPath)" class="img-rounded" title="@Model.ProductImage.Title" alt="@Model.ProductImage.Caption" />
                </div>
            </div>
        </div>
        </text>
