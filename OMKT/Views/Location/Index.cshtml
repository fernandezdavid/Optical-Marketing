@model IEnumerable<OMKT.Business.Location>

@{
    ViewBag.Title = "Administración de Ubicaciones";
    Layout = "~/Views/Shared/_Dashboard_Layout.cshtml";
}

<h2>Administración de Ubicaciones</h2>

<p>
    <a href="@Url.Action("Create", "Location")" class="btn btn-primary"><i class="icon-plus icon-white ">
        </i> Nueva Ubicación</a>
</p>
<table id="example" class="table table-striped table-bordered">
    <tr>
        <th>
            Latitud
        </th>
        <th>
            Longitud
        </th>
        <th>
            Descripción
        </th>
        <th>
            Dirección
        </th>
        <th>
            Nro. de Referencia
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Latitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Longitude)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReferenceNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LocationId }) |
            @Html.ActionLink("Details", "Details", new { id=item.LocationId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LocationId })
        </td>
    </tr>
}

</table>
<script type="text/javascript">
    $(document).ready(function () {
        $('#example').dataTable({
            "sDom": "<'row-fluid'<'span6'T><'span6'f>r>t<'row-fluid'<'span6'i><'span6'p>>",
            "aoColumnDefs": [
                { "bSortable": false, "aTargets": [0, 12] }
            ]
            //"sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>"
        });
    });
   
</script>